---
import BaseLayout from "../layouts/BaseLayout.astro";

const apiUrl = import.meta.env.API_URL || 'http://localhost:3001';
---

<BaseLayout title="Mi Confirmación - Sheila & Habib">
  <main class="min-h-screen bg-surface-1 py-12">
    <div class="container mx-auto px-4 max-w-5xl">
      <!-- Header -->
      <div
        class="bg-bg-panel rounded-lg shadow-sm border border-border-soft/60 p-8 mb-8"
      >
        <div class="text-center">
          <h1 class="font-serif text-4xl text-text-secondary mb-4">Bienvenido</h1>
          <div class="w-16 h-0.5 bg-accent mx-auto mb-4"></div>
          <p class="text-text-muted" id="welcome-message">
            Cargando tu información...
          </p>
        </div>
      </div>

      <!-- Estado del RSVP -->
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Mi RSVP -->
        <div class="bg-bg-panel rounded-lg shadow-sm border border-border-soft/60 p-8">
          <div class="flex items-center mb-6">
            <div
              class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mr-4"
            >
              <svg
                class="w-6 h-6 text-accent-contrast"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <h2 class="font-serif text-2xl text-text-secondary">Mi Confirmación</h2>
          </div>

          <div id="rsvp-status" class="space-y-4 mb-8">
            <div class="animate-pulse">
              <div class="h-4 bg-surface-2 rounded w-3/4 mb-2"></div>
              <div class="h-4 bg-surface-2 rounded w-1/2"></div>
            </div>
          </div>

          <div class="space-y-4">
            <a
              href="/rsvp/form"
              class="block w-full bg-accent text-accent-contrast py-3 px-6 rounded-lg text-center font-medium hover:bg-accent-hover transition-colors"
            >
              Editar mi Confirmación
            </a>
          </div>
        </div>

        <!-- Información del evento -->
        <div class="bg-bg-panel rounded-lg shadow-sm border border-border-soft/60 p-8">
          <div class="flex items-center mb-6">
            <div
              class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mr-4"
            >
              <svg
                class="w-6 h-6 text-accent-contrast"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <h2 class="font-serif text-2xl text-text-secondary">
              Información del Evento
            </h2>
          </div>

          <div class="space-y-6">
            <div class="border-l-4 border-accent pl-4">
              <h3 class="font-medium text-text-secondary mb-2">Evento completo</h3>
              <p class="text-sm text-text-muted">Sábado, 4 de Julio 2026</p>
              <p class="text-sm text-text-muted">
                Los Jardines Palacio de La Dehesa · Lucena, Córdoba
              </p>
            </div>

            <div class="border-l-4 border-accent pl-4">
              <h3 class="font-medium text-text-secondary mb-2">Horarios de la fiesta</h3>
              <p class="text-sm text-text-muted">20:15h · Ceremonia civil</p>
              <p class="text-sm text-text-muted">21:00h · Cóctel</p>
              <p class="text-sm text-text-muted">23:30h · Cena</p>
              <p class="text-sm text-text-muted">00:30h · Fiesta</p>
            </div>

            <div class="border-l-4 border-accent pl-4">
              <h3 class="font-medium text-text-secondary mb-2">Recordatorio</h3>
              <p class="text-sm text-text-muted">
                Confirma antes del 1 de Junio 2026
              </p>
              <p class="text-sm text-text-muted">Código de vestimenta: Boho sencillo.</p>
              <a
                href="/#dresscode"
                class="inline-flex mt-2 text-sm text-accent hover:text-accent-hover underline underline-offset-4"
              >
                Ver dresscode general
              </a>
            </div>
          </div>
        </div>
      </div>

      <!-- Acciones adicionales -->
      <div
        class="mt-8 bg-bg-panel rounded-lg shadow-sm border border-border-soft/60 p-8"
      >
        <h2 class="font-serif text-2xl text-text-secondary mb-8 text-center">
          Enlaces Útiles
        </h2>

        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <a
            href="/"
            class="bg-surface-1 hover:bg-surface-2 rounded-lg p-6 text-center transition-colors group"
          >
            <div
              class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent-hover transition-colors"
            >
              <svg
                class="w-6 h-6 text-accent-contrast"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z"
                ></path>
              </svg>
            </div>
            <p class="font-medium text-text-secondary mb-2">Página Principal</p>
            <p class="text-sm text-text-muted">
              Ver toda la información del evento
            </p>
          </a>

          <a
            href="/#viaje"
            class="bg-surface-1 hover:bg-surface-2 rounded-lg p-6 text-center transition-colors group"
          >
            <div
              class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent-hover transition-colors"
            >
              <svg
                class="w-6 h-6 text-accent-contrast"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <p class="font-medium text-text-secondary mb-2">Viaje y Alojamiento</p>
            <p class="text-sm text-text-muted">Información sobre cómo llegar</p>
          </a>

          <a
            href="/dresscode"
            class="bg-surface-1 hover:bg-surface-2 rounded-lg p-6 text-center transition-colors group border border-border-soft/60"
          >
            <div
              class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent-hover transition-colors"
            >
              <svg
                class="w-6 h-6 text-accent-contrast"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M9.049 2.927C9.469 1.608 10.531 1.608 10.951 2.927L12.06 6.4a1 1 0 00.95.69h3.652c1.371 0 1.796 1.755.687 2.564l-2.955 2.148a1 1 0 00-.364 1.118l1.11 3.473c.42 1.318-.984 2.413-2.093 1.604l-2.956-2.149a1 1 0 00-1.176 0l-2.955 2.149c-1.11.809-2.514-.286-2.093-1.604l1.11-3.473a1 1 0 00-.364-1.118L2.651 9.654c-1.11-.809-.684-2.564.687-2.564H6.99a1 1 0 00.95-.69l1.109-3.473z"
                  clip-rule="evenodd"
                ></path>
              </svg>
            </div>
            <p class="font-medium text-text-secondary mb-2">Dresscode inspiración</p>
            <p class="text-sm text-text-muted">
              Ver guía completa de inspiración Boho sencilla.
            </p>
          </a>

          <button
            id="logout-btn"
            class="bg-surface-1 hover:bg-surface-2 rounded-lg p-6 text-center transition-colors group"
          >
            <div
              class="w-12 h-12 bg-accent rounded-full flex items-center justify-center mx-auto mb-4 group-hover:bg-accent-hover transition-colors"
            >
              <svg
                class="w-6 h-6 text-accent-contrast"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 9.293a1 1 0 001.414 1.414l3-3a1 1 0 000-1.414l-3-3a1 1 0 10-1.414 1.414L14.586 9H7a1 1 0 100 2h7.586l-1.293 1.293z"
                  clip-rule="evenodd"></path>
              </svg>
            </div>
            <p class="font-medium text-text-secondary mb-2">Cerrar Sesión</p>
            <p class="text-sm text-text-muted">Salir de mi cuenta</p>
          </button>
        </div>
      </div>

      <div class="mt-8 bg-bg-panel rounded-lg shadow-sm border border-border-soft/60 p-8 text-center">
        <div class="space-y-1">
          <p class="text-[11px] tracking-[0.35em] uppercase text-text-muted/70">Lista de boda</p>
          <h2 class="font-serif text-2xl text-text-secondary">Regalo de Boda</h2>
        </div>

        <p class="mt-4 text-sm text-text-muted max-w-md mx-auto leading-relaxed">
          Con tu presencia nos es más que suficiente, pero si quieres ayudarnos con nuestro viaje de novios,
          aquí te dejamos nuestros datos bancarios.
        </p>

        <div class="mt-6 bg-surface-1 border border-border-soft rounded-lg px-6 py-5 text-left space-y-3 max-w-md mx-auto">
          <div class="space-y-0.5">
            <p class="text-[10px] tracking-[0.3em] uppercase text-text-muted/70">Beneficiarios</p>
            <p class="text-sm font-medium text-text-secondary">Sheila María Nieto Serrano</p>
            <p class="text-sm font-medium text-text-secondary">Habib Chalup Castro</p>
          </div>
          <div class="border-t border-border-soft/60 pt-3 space-y-1">
            <p class="text-[10px] tracking-[0.3em] uppercase text-text-muted/70">IBAN</p>
            <div class="flex items-center justify-between gap-2">
              <p class="text-sm font-mono font-medium text-text-secondary tracking-wider">
                ES91 2100 0418 4502 0005 1332
              </p>
              <button
                id="copy-iban-btn"
                data-iban="ES9121000418450200051332"
                aria-label="Copiar IBAN"
                class="flex-shrink-0 text-accent hover:text-accent-hover transition-colors"
                title="Copiar IBAN"
              >
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
                </svg>
              </button>
            </div>
            <p id="iban-feedback" class="text-[11px] text-accent hidden">¡IBAN copiado!</p>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<script define:vars={{ apiUrl }}>
  document.addEventListener("DOMContentLoaded", async () => {
    try {
      // Verificar autenticación
      const authResponse = await fetch(`${apiUrl}/auth/me`, {
        credentials: "include",
      });

      if (!authResponse.ok) {
        window.location.href = "/rsvp/login";
        return;
      }

      const authData = await authResponse.json();
      if (!authData.success) {
        window.location.href = "/rsvp/login";
        return;
      }

      // Mostrar información del usuario
      const welcomeMessage = document.getElementById("welcome-message");
      if (welcomeMessage) {
        welcomeMessage.textContent = `Hola ${authData.user.name}, aquí tienes tu información de RSVP`;
      }

      // Cargar estado del RSVP
      const rsvpResponse = await fetch(`${apiUrl}/api/rsvp/form`, {
        credentials: "include",
      });

      if (rsvpResponse.ok) {
        const rsvpData = await rsvpResponse.json();
        if (rsvpData.success) {
          displayRSVPStatus(rsvpData.form);
        }
      }
    } catch (error) {
      console.error("Error loading dashboard:", error);
      window.location.href = "/rsvp/login";
    }
  });

  function formatGenderLabel(gender) {
    const labels = {
      masculino: "Masculino",
      femenino: "Femenino",
      otro: "Otro",
    };
    if (!gender) return "No especificado";
    return labels[gender] || gender;
  }

  function formatMenuLabel(menuChoice) {
    const labels = {
      carne: "Menú con carne",
      pescado: "Menú con pescado",
      vegetariano: "Menú vegetariano",
      vegano: "Menú vegano",
    };
    if (!menuChoice) return "No especificado";
    return labels[menuChoice] || menuChoice;
  }

  function displayRSVPStatus(rsvp) {
    const statusContainer = document.getElementById("rsvp-status");
    if (!statusContainer) return;

    const isPending = rsvp.attending === null || typeof rsvp.attending === "undefined";
    const isAttending = rsvp.attending === true || rsvp.attending === 1;
    const companions = Array.isArray(rsvp.companions) ? rsvp.companions : [];
    const hasCompanions = companions.length > 0;

    let statusHtml = "";

    if (isPending) {
      statusHtml = `
        <div class="bg-status-warning/10 border border-status-warning/30 rounded-lg p-4">
          <p class="font-semibold text-status-warning">Pendiente de confirmación</p>
          <p class="text-sm text-status-warning">Aún no has confirmado tu asistencia</p>
        </div>
      `;
    } else if (isAttending) {
      statusHtml = `
        <div class="bg-status-success/10 border border-status-success/30 rounded-lg p-4">
          <p class="font-semibold text-status-success">Confirmado</p>
          <p class="text-sm text-status-success">Gracias por confirmar tu asistencia</p>
          ${hasCompanions ? `
            <div class="mt-2 pt-2 border-t border-status-success/40">
              <p class="text-sm text-status-success"><strong>Acompañantes:</strong> ${companions.map((c) => c.name || "Sin nombre").join(", ")}</p>
            </div>
          ` : ""}
        </div>
      `;
    } else {
      statusHtml = `
        <div class="bg-status-danger/10 border border-status-danger/30 rounded-lg p-4">
          <p class="font-semibold text-status-danger">No podrás asistir</p>
          <p class="text-sm text-status-danger">Lamentamos que no puedas acompañarnos</p>
        </div>
      `;
    }

    // Agregar detalles adicionales si existen
    const hasAdditionalDetails =
      rsvp.phone ||
      rsvp.gender ||
      rsvp.menu_choice ||
      rsvp.dietary_restrictions ||
      (isAttending && hasCompanions) ||
      rsvp.children ||
      rsvp.children_menu_choice ||
      rsvp.children_dietary_restrictions ||
      rsvp.needs_transport ||
      rsvp.notes;

    const hasChildrenDetails = rsvp.children || rsvp.children_menu_choice || rsvp.children_dietary_restrictions;
    const hasLogisticsDetails = rsvp.needs_transport || rsvp.notes;
    
    if (hasAdditionalDetails) {
      statusHtml += `
        <div class="bg-status-info/10 border border-status-info/30 rounded-lg p-4 mt-4">
          <p class="font-semibold text-status-info mb-2">Detalles adicionales</p>
          
          ${rsvp.phone ? `<p class="text-sm text-status-info"><strong>Teléfono:</strong> ${rsvp.phone}</p>` : ""}
          ${rsvp.gender ? `<p class="text-sm text-status-info"><strong>Sexo:</strong> ${formatGenderLabel(rsvp.gender)}</p>` : ""}
          ${rsvp.menu_choice ? `<p class="text-sm text-status-info"><strong>Menú:</strong> ${formatMenuLabel(rsvp.menu_choice)}</p>` : ""}
          ${rsvp.dietary_restrictions ? `<p class="text-sm text-status-info"><strong>Restricciones dietéticas:</strong> ${rsvp.dietary_restrictions}</p>` : ""}

          ${isAttending && hasCompanions ? `
            <div class="mt-3 pt-3 border-t border-status-info/30">
              <p class="text-sm font-semibold text-status-info mb-2">Acompañantes</p>
              <div class="space-y-2">
                ${companions.map((companion, index) => `
                  <div class="text-sm text-status-info">
                    <p><strong>${index + 1}. Nombre:</strong> ${companion.name || 'Sin especificar'}</p>
                    <p><strong>Sexo:</strong> ${formatGenderLabel(companion.gender)}</p>
                    <p><strong>Menú:</strong> ${formatMenuLabel(companion.menu_choice)}</p>
                    <p><strong>Intolerancias:</strong> ${companion.dietary_restrictions || 'No especificado'}</p>
                  </div>
                `).join("")}
              </div>
            </div>
          ` : ""}

          ${hasChildrenDetails ? `
            <div class="mt-3 pt-3 border-t border-status-info/30">
              <p class="text-sm font-semibold text-status-info mb-2">Niños</p>
              ${rsvp.children ? `<p class="text-sm text-status-info"><strong>Niños:</strong> ${rsvp.children_count || 'Sí'} ${rsvp.children_names ? `(${rsvp.children_names})` : ''}</p>` : ""}
              ${rsvp.children_menu_choice ? `<p class="text-sm text-status-info"><strong>Menú niños:</strong> ${formatMenuLabel(rsvp.children_menu_choice)}</p>` : ""}
              ${rsvp.children_dietary_restrictions ? `<p class="text-sm text-status-info"><strong>Restricciones niños:</strong> ${rsvp.children_dietary_restrictions}</p>` : ""}
            </div>
          ` : ""}

          ${hasLogisticsDetails ? `
            <div class="mt-3 pt-3 border-t border-status-info/30">
              <p class="text-sm font-semibold text-status-info mb-2">Transporte y comentarios</p>
              ${rsvp.needs_transport ? `<p class="text-sm text-status-info"><strong>Transporte:</strong> Necesita bus lanzadera</p>` : ""}
              ${rsvp.notes ? `<p class="text-sm text-status-info"><strong>Comentarios:</strong> ${rsvp.notes}</p>` : ""}
            </div>
          ` : ""}
        </div>
      `;
    }

    statusContainer.innerHTML = statusHtml;
  }

  // Logout
  document.getElementById("logout-btn")?.addEventListener("click", async () => {
    try {
      await fetch(`${apiUrl}/auth/logout`, {
        method: "POST",
        credentials: "include",
      });
      window.location.href = "/";
    } catch (error) {
      console.error("Error logging out:", error);
    }
  });

  document.getElementById("copy-iban-btn")?.addEventListener("click", async () => {
    const iban = document.getElementById("copy-iban-btn")?.getAttribute("data-iban");
    const feedback = document.getElementById("iban-feedback");
    if (!iban) return;
    await navigator.clipboard.writeText(iban);
    if (feedback) {
      feedback.classList.remove("hidden");
      setTimeout(() => feedback.classList.add("hidden"), 2000);
    }
  });
</script>
