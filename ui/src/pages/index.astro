---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Countdown from '../components/Countdown.astro';
import OurStory from '../components/OurStory.astro';
import EventDetails from '../components/EventDetails.astro';
import TravelAccommodation from '../components/TravelAccommodation.astro';
import RSVPSection from '../components/RSVPSection.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="María & Juan - 15 de Junio, 2024 | Sevilla">
  <main id="inicio">
    <!-- Hero Section con imagen de ceremonia -->
    <Hero />
    
    <!-- Cuenta atrás elegante -->
    <Countdown />
    
    <!-- Nuestra Historia -->
    <OurStory />
    
    <!-- Detalles del evento -->
    <EventDetails />
    
    <!-- Viaje y Alojamiento -->
    <TravelAccommodation />
    
    <!-- Sección RSVP -->
    <RSVPSection />
  </main>
  
  <!-- Footer -->
  <Footer />
</BaseLayout>