            <div class="bg-blue-50 rounded-lg p-4">
              <h3 class="font-semibold text-gray-800 mb-2">Recordatorio</h3>
              <p class="text-sm text-gray-600">Confirma antes del 1 de Mayo</p>
              <p class="text-sm text-gray-600">Dress code: Elegante</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Acciones adicionales -->
      <div class="mt-8 bg-white rounded-2xl shadow-lg p-6">
