---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import EventDetails from '../components/EventDetails.astro';
import Countdown from '../components/Countdown.astro';
import Location from '../components/Location.astro';
import RSVPSection from '../components/RSVPSection.astro';
---

<BaseLayout title="Nuestra Boda - Información del Evento">
  <main>
    <!-- Hero Section con foto de los novios -->
    <Hero />
    
    <!-- Cuenta atrás -->
    <Countdown />
    
    <!-- Detalles del evento -->
    <EventDetails />
    
    <!-- Ubicación y puntos de interés -->
    <Location />
    
    <!-- Sección RSVP -->
    <RSVPSection />
  </main>
</BaseLayout>